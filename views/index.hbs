<html>
    <head>
        <link rel="stylesheet" href="index.css">
        <link href="https://fonts.googleapis.com/css2?family=Prompt:wght@400;700&display=swap" rel="stylesheet">
    </head>
<body>
    <h1>MyRestaurant</h1>
        <ul class="flex-container wrap">
            {{#each restaurants}}
            <li class="flex-item">
                <img src="{{this.imageURL}}" class="restaurants-item-image">
                <div class="restaurants-item-name">{{this.name}}</div>
                <div class="restaurants-item-type">{{this.type}}</div>
            </li>
            {{/each}}
        </ul>
</body>
</html>